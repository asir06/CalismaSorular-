package CalısmaSoruları;
import java.util.*;
public class Soru18 {

	public static void main(String[] args) {
		// Klavyeden girilen Celcius sıcaklık değerini Fahrenheit'a çeviren programı yazınız.b
		System.out.println("Celcius Giriniz");
		Scanner giris=new Scanner(System.in);
		double c=giris.nextDouble();
		double f=32+c*9/5;
		System.out.print(c+" Celcius ="+f+" Fahrenheit");
	}

}
