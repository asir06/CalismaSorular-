package CalısmaSoruları;
import java.util.*;
public class Soru1 {

	public static void main(String[] args) {
		// Klavyeden 15 sayısı girilene kadar sayıları toplayıp sonucu ekrana yazan programı yazınız.
		int toplam=0;
		int sayi=0;
		while(sayi!=15)
		{
			Scanner giris=new Scanner(System.in);
			sayi=giris.nextInt();
			toplam=toplam+sayi;
		}
		System.out.println("Toplamları ==> "+toplam);

	}

}
