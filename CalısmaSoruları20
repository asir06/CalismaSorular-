package CalısmaSoruları;

public class Soru20 {

	public static void main(String[] args) {
		// int türden bir dizinin elemanlarını tekler ve çiftler olmak üzere ayrı ayrı yazan programı yazınız.
		int[]dizi= {25,96,32,41,25,63,25};  
		System.out.println("Çift Sayılar ==> ");
		for(int i=0; i<7; i++)
		{
			if(dizi[i]%2==0)
			{
				System.out.println(dizi[i]+" Sayısı Çifttir");
			}
			else
				System.out.println(dizi[i]+" Sayısı Tektir");
		}
	}

}
