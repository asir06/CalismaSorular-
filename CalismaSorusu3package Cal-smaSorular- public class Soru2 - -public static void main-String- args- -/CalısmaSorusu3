package CalısmaSoruları;
public class Soru2 {
	public static void main(String[] args) {
		//45 ile 225 arasındaki çift ve 7'ye bölünebilen sayıların toplamını bulup sonucu ekranda gösteren programın kodlarını yazınız
		int toplam=0;
		System.out.println("SAYILAR ===>");
		for(int i=45; i<=225; i++)
		{
			if(i%7==0 && i%2==0)
			{
				System.out.println(i+" ");
				toplam=toplam+i;
			}
		}
		System.out.println("TOPLAM="+toplam);
	}

}
